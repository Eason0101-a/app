<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  android:padding="16dp"
    tools:context=".ImageButtonGame">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回登入頁"  android:layout_gravity="start"  android:layout_marginBottom="16dp" /> <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"  android:layout_weight="1"   android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gussnumberimage"
        android:contentDescription="圖片按鈕 1"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bmi"
        android:contentDescription="圖片按鈕 2"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/snakegame111"
        android:contentDescription="圖片按鈕 3"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mainactivity"
        android:contentDescription="圖片按鈕 4"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/temperatureconversion"
        android:contentDescription="圖片按鈕 5"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tictactoe"
        android:contentDescription="圖片按鈕 6"
        android:background="@android:color/transparent" />


</GridLayout>

</LinearLayout>