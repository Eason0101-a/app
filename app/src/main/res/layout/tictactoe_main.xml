<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_tictactoe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTacToeActivity">

    <!-- 標題 -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic-Tac-Toe"
        android:textSize="34sp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 顯示輪到誰 -->
    <TextView
        android:id="@+id/turnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="輪到 X"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 顯示結果 -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/turnTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 井字棋九個按鈕 -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:rowCount="3"
        android:columnCount="3"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button android:id="@+id/button1" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 1 格" />
        <Button android:id="@+id/button2" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 2 格" />
        <Button android:id="@+id/button3" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 3 格" />
        <Button android:id="@+id/button4" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 4 格" />
        <Button android:id="@+id/button5" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 5 格" />
        <Button android:id="@+id/button6" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 6 格" />
        <Button android:id="@+id/button7" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 7 格" />
        <Button android:id="@+id/button8" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 8 格" />
        <Button android:id="@+id/button9" android:layout_width="100dp" android:layout_height="100dp" android:contentDescription="棋盤第 9 格" />
    </GridLayout>

    <!-- 再來一局 -->
    <Button
        android:id="@+id/again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再來一局"
        android:textSize="20sp"
        android:contentDescription="重新開始遊戲"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 返回主畫面 -->
    <Button
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:contentDescription="返回主畫面"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
